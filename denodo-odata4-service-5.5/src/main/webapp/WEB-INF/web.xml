<!--     
    To enable Cross-origin resource sharing (CORS) mechanism, modify the values of the environment entries of the 
    file "cors_settings". 
    After changing these values, restart the service.
    
    If you are deploying this war in an external Web container, before you do it, do the following: 

    a) Configure the container to allow external entities to be loaded.

    b) Or, manually replace the reference "&cors_settings" with the content of the file "cors_settings.xml". 
       Then, remove the elements "DOCTYPE" and "ENTITY" above the root element "web-app".
-->

<!DOCTYPE doc [
<!ENTITY cors_settings SYSTEM "cors_settings.xml">
]>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         id="denodo-odata4-service" version="2.4">

  <display-name>Denodo OData4</display-name>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>


  <!-- ******************* -->
  <!-- Filters             -->
  <!-- ******************* -->
  
  &cors_settings;
  
  <filter>
    <filter-name>DenodoODataFilter</filter-name>
    <filter-class>com.denodo.connect.odata4.filter.DenodoODataFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>DenodoODataFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


  <!-- ******************* -->
  <!-- Servlets            -->
  <!-- ******************* -->

  <servlet>
    <servlet-name>DenodoServlet</servlet-name>
    <servlet-class>com.denodo.connect.odata4.DenodoServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>DenodoServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <!-- ******************* -->
  <!-- Context Parameters  -->
  <!-- ******************* -->


  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:log4j.properties</param-value>
  </context-param>

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>

  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>DenodoOData4</param-value>
</context-param>

  <!-- ******************* -->
  <!-- Listeners           -->
  <!-- ******************* -->

  <listener>
    <listener-class>
      org.springframework.web.util.Log4jConfigListener
    </listener-class>
  </listener>

  <listener>
    <listener-class>
      org.springframework.web.context.ContextLoaderListener
    </listener-class>
  </listener>


</web-app>
