<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
          
  <id>dist</id>
  
  <formats>
    <format>zip</format>
  </formats>
  
  
  <fileSets>
    <fileSet>
      <directory>${basedir}/target/</directory>
      <outputDirectory>/dist</outputDirectory>
      <includes>
        <include>denodo-odata-${project.version}.jar</include>
        <include>denodo-odata-${project.version}-javadoc.jar</include>
        <include>denodo-odata-${project.version}-sources.jar</include>
        <include>denodo-odata-${project.version}-jar-with-dependencies.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/doc/</directory>
      <outputDirectory>/doc</outputDirectory>
      <includes>
        <include>**/*.pdf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>README.txt</include>
        <include>LICENSE.txt</include>
        <include>NOTICE.txt</include>
      </includes>
    </fileSet>
  </fileSets>
  
    
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>com.denodo.devkit:denodo-odata-wrapper</exclude>
      </excludes>
    </dependencySet>
  </dependencySets> 


</assembly>
